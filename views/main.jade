doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    title #{title} - Github Org Adder
    link(rel='shortcut icon', href='/favicon.png')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.css')
    link(rel='stylesheet', href='main.css')
  body
    .container
      .row
        .col-md-4.col-md-offset-4
          h1=locals.title
          p.lead=locals.welcome
          h3 Step 1
          p Submit your Github username below
          h3 Step 2
          p Go to 
            a(href="https://github.com/#{locals.githuborg}") #{locals.githuborg} 
            | and accept the invitation
          if locals.accept 
            img(src="#{locals.accept}", width='100%')
          if locals.accept2
            img(src="#{locals.accept2}", width='100%')
          hr
          h2 Get started
          p
            em (will automatically redirect to 
              a(href="https://github.com/#{locals.githuborg}") #{locals.githuborg}
              | &nbsp;for invitation accept)
          form.form-inline.form-group.form-horizontal(action='/', method='POST')
            input.form-control(name="username", id="username", type="text", placeholder="username")
            | &nbsp;
            input.btn.btn-primary(type="submit", value="Submit")

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/js/bootstrap.js')
    script(src='main.js')

